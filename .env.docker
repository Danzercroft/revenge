# Конфигурация приложения
APP_NAME=Revenge
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

# Локализация
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Обслуживание
APP_MAINTENANCE_DRIVER=file

# База данных PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=revenge
DB_USERNAME=revenge_user
DB_PASSWORD=revenge_password

# Широковещание
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Очереди
QUEUE_CONNECTION=redis

# Кэширование
CACHE_STORE=redis
CACHE_PREFIX=revenge_cache

# Сессии
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Redis конфигурация
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=redis_password
REDIS_PORT=6379
REDIS_DB=0

# Почта (настройте под ваш SMTP сервер)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (если используется)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (если используется для real-time функций)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite конфигурация для production
VITE_APP_NAME="${APP_NAME}"
